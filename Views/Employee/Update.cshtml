@model SimpleCRUD.Models.Employee

<h3 class="fs-3 fw-bold text-center my-5">Update Employee</h3>
<div class="border rounded p-4 col-md-6 mx-auto">
    <form asp-action="Update" method="post">
        <hidden asp-for="Id" />
        <div class="form-group">
            <label asp-for="FirstName" class="form-label">First name</label>
            <input asp-for="FirstName" class="form-control">
            <div asp-validation-for="FirstName" class="form-text"></div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="form-label">Last name</label>
            <input asp-for="LastName" class="form-control">
            <div asp-validation-for="LastName" class="form-text"></div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control">
            <div asp-validation-for="Email" class="form-text"></div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label">Phone number</label>
            <input asp-for="PhoneNumber" class="form-control">
            <div asp-validation-for="PhoneNumber" class="form-text"></div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="">-- Select Category --</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Description</option>
                }
            </select>
            <div asp-validation-for="CategoryId" class="form-text"></div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            <input type="submit" value="Update Employee" class="btn btn-dark">
        </div>
    </form>
</div>