@model SimpleCRUD.Models.Employee

<h3 class="text-center my-5">Employee Details</h3>

<div class="row rounded shadow p-3">
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Category</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.FirstName</td>
                <td>@Model.LastName</td>
                <td>@Model.Email</td>
                <td>@Model.PhoneNumber</td>
                <td>@Model.Category?.Name</td>
                <td>@Model.Category?.Description</td>
            </tr>
        </tbody>
    </table>
    <div class="mt-3">
        <a asp-action="Update" asp-route-id="@Model?.Id" class="btn btn-primary">Update</a>
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</div>