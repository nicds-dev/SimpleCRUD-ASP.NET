@model IEnumerable<SimpleCRUD.Models.Employee>

<h2>Employees:</h2>

<div class="row rounded shadow p-3">
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Category</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.Category.Name</td>
                    <td>@employee.Category.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>