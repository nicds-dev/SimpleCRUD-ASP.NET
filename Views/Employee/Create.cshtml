@model SimpleCRUD.Models.Employee

<div class="row">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="FirstName" class="form-label">First name</label>
            <input asp-for="FirstName" class="form-control">
            <div asp-validation-for="FirstName" class="form-text"></div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="form-label">Last name</label>
            <input asp-for="LastName" class="form-control">
            <div asp-validation-for="LastName" class="form-text"></div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control">
            <div asp-validation-for="Email" class="form-text"></div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label">Phone number</label>
            <input asp-for="PhoneNumber" class="form-control">
            <div asp-validation-for="PhoneNumber" class="form-text"></div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="">-- Select Category --</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Description</option>
                }
            </select>
            <div asp-validation-for="CategoryId" class="form-text"></div>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Save" class="btn btn-primary">
            <a asp-action="Index" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>